{
	"manifest_version": 3,
	"name": "TextWork",
	"description": "Описание расширения",
	"version": "0.0.1",
	"author": "Автор",
	"action": {
		"default_title": "Работа с текстом",
		"default_icon": "/image/logo.png",
		"default_popup": "VocabularyHTML.html"
	},
	"content_scripts": [
		{
			"matches":[
				"<all_urls>"
			],
			"js": ["defSyn.js", "requestWordData.js","VocabularyJS.js"],
			"css": ["popupText.css","VocabularyStyles.css"]
		}
	],
	"permissions": ["storage", "activeTab", "scripting"],
	"options_page": "SettingWin.html"
}
